<h2><%= @list.name %></h2>

<p>
<%= link_to "Back to list", lists_path%>
</p>

<%= link_to "Add a movie", new_list_bookmark_path(@list)%>

<ul class=“list-group”>
  <% @list.bookmarks.each do |bookmark| %>
    <li class=“list-group-item”>
      <p></p>
      <%= bookmark.movie.title %>
      <p></p>
      <p>Rating :
      <%= bookmark.movie.rating %></p>
      <p></p>
      <%= bookmark.movie.overview %>
      <p></p>
      <%= bookmark.comment %>
      <p></p>
    </li>
      <%#= button_to "Delete", list_bookmark_path(@list), method: :delete %>
    <p>
      <%= link_to "Delete",
                  bookmark_path(bookmark),
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>
  <% end %>
</ul>
